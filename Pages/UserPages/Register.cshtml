@page
@model GrobsJobsRazorPages.Pages.UserPages.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterViewModel.Email">Email Address</label>
                    <input type="text" asp-for="RegisterViewModel.Email" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterViewModel.DisplayName">Display Name</label>
                    <input type="text" asp-for="RegisterViewModel.DisplayName" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.DisplayName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterViewModel.Password">Password</label>
                    <input type="password" asp-for="RegisterViewModel.Password" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterViewModel.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="RegisterViewModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>