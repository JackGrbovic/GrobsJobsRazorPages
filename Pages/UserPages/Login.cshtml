@page
@model GrobsJobsRazorPages.Pages.UserPages.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>
            
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginViewModel.Email">Email</label>
                    <input type="text" asp-for="LoginViewModel.Email" class="form-control" />
                    <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginViewModel.Password">Password</label>
                    <input type="password" asp-for="LoginViewModel.Password" class="form-control" />
                    <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                    @if (Model.LoginErrorMessage != null){
                        <p class="text-danger">@Model.LoginErrorMessage</p>
                    }
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="LoginViewModel.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="LoginViewModel.RememberMe">Remember Me?</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>